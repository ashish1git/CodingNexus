# Backend Environment Variables
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV="development"
PORT=21000

# Database (Required)
DATABASE_URL="postgresql://user:password@neon.tech/database"

# JWT Secret (Required)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:22000,https://yourdomain.vercel.app"

# ⚠️  ASYNC SUBMISSION SETTINGS (NEW)
# 
# For Render FREE TIER: Keep ENABLE_POLLING=false
# Judge0Queue polling will stress your free database connection pool
# Use on-demand result fetching instead (frontend calls /fetch-results endpoint)
#
# For PAID TIER: Set ENABLE_POLLING=true with conservative interval
ENABLE_POLLING=false
POLL_INTERVAL=15000  # 15 seconds - only if ENABLE_POLLING=true

# Judge0 API (for code execution)
JUDGE0_URL="http://64.227.149.20:2358"

# Cloudinary (optional - for file uploads)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
